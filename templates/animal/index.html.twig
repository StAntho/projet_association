{% extends 'layout.html.twig' %}

{% block title %}
  Hello AnimalController!
{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
        18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
        2px 6px; }
    </style>

    <div class="example-wrapper">
        {% for animal in animals %}
            <p>{{ animal.name }}, {{animal.age}}, {{animal.type}}, {{animal.race}}, 
            {{animal.description}}, {{animal.gender}}, 
            
            {% if animal.sterilised %}
            Stéril(e)
            {% else %}
            Non Stéril(e)
            {% endif %}
            
            {% if animal.reserved %}
            Réservé(e)
            {% else %}
            Non réservé(e)
            {% endif %}
            {{ animal.Datearrived|date('d-M-yy H:m:s') }}
            </p>
        {% endfor %}
    </div>

{% endblock %}
