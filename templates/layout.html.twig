{% extends 'base.html.twig' %}

{% block body %}
  <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 border-bottom shadow-sm">
    <div class=" header-links d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3">
      {# <h5 class="my-0 mr-md-auto font-weight-normal">
        <a href="{{ path('index') }}">Company name</a>
      </h5> #}
      <nav class="my-2 my-md-0 mr-md-3">
        <a href="{{ path('index') }}">Company name</a>
        <a class="p-2" href="{{path('animal_list')}}">Nos animaux</a>
        <a class="p-2" href="{{path('products')}}">Notre boutique</a>
      </nav>
      {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{path('admin')}}">Back Office</a>
      {% endif %}
      {% if app.user %}
      <a class="p-2 text-dark" href="{{path('user_dossier_list', {user_id:app.user.id})}}">Mes dossiers</a>
      <a class="p-2 text-dark" href="{{ path('app_logout') }}">Se deconnecter</a>
      {% else %}
      <a class="signup-button btn btn-outline-primary" href="{{ path('app_register') }}">S'inscrire</a>
      <a class="login-button btn btn-primary" href="{{ path('app_login') }}">Se connecter</a>
      {% endif %}
    </div>
  </header>
  {% for type, messages in app.flashes %}
    <div class=" alert alert-{{ type }}">
      {% for message in messages %}
        <p>
          {{ message }}
        </p>
      {% endfor %}
    </div>
  {% endfor %}
  {% block content %}

  {% endblock %}
  <footer class=" my-md-5  border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2"
          src="{{asset('image/dog.png')}}"
          alt="logo"
          width="200"
          height="200" />
        <small class="d-block mb-3 text-muted">&copy; 2021-2022</small>
      </div>
      <div class="col-6 col-md pt-4">
        <h5>
          Features
        </h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Cool stuff</a></li>
          <li><a class="text-muted" href="#">Random feature</a></li>
        </ul>
      </div>
      <div class="col-6 col-md pt-4">
        <h5>
          Resources
        </h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Resource</a></li>
          <li><a class="text-muted" href="#">Resource name</a></li>
        </ul>
      </div>
      <div class="col-6 col-md pt-4">
        <h5>
          About
        </h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Team</a></li>
          <li><a class="text-muted" href="#">Locations</a></li>
          <li><a class="text-muted" href="{{ path('privacy')}}">Privacy</a></li>
          <li><a class="text-muted" href="{{ path('terms')}}">Terms</a></li>
        </ul>
      </div>
    </div>
  </footer>
{% endblock %}
