{% extends 'layout.html.twig' %}

{% block title %}
  Boutique
{% endblock %}

{% block content %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; }
  </style>

  <h1>
    Notre boutique
  </h1>


  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      {% for product in products %}
        <div class="col" style="max-width: 20rem;">
          <div class="card" style="max-width: 18rem;">
            <img src="{{ asset('img/product/' ~ product.image) }}"
              class="card-img-top"
              alt="{{ product.name }}"
              style="width:286px; height:181px" />
            <div class="card-body">
              <h5 class="card-title">
                {{ product.name }}
              </h5>
              <p class="card-text">
                {{ product.description }}
              </p>
            </div>
            <div class="card-footer">
              <small class="text-muted">{{ product.price }}</small>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}
