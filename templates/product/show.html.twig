{% extends 'layout.html.twig' %}

{% block content %}
  <div class="container">
    <div class="card mb-3" style="max-width: 740px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{ asset('img/product/' ~ product.image) }}"
            class="card-img"
            alt="{{ product.name }}" />
        </div>

        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              {{ product.name }}
            </h5>

            <p class="card-text">
              Categorie: {{ product.category.name }}
            </p>

            <p>
              Stock: {{ product.quantity }}
            </p>

            <p class="card-price">
              Prix: {{ product.price }} â‚¬
            </p>

            <p class="card-text">
              Description: {{ product.description }}
            </p>
            <a href="#" class="card-link btn btn-primary">Ajouter panier</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
